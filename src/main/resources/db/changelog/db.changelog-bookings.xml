<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

    <changeSet id="1" author="Sive">
        <createTable tableName="appointments" schemaName="public">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="appointment_date_time" type="TIMESTAMP(6)"/>
            <column name="branch" type="VARCHAR(255)"/>
            <column name="confirmation_code" type="VARCHAR(255)"/>
            <column name="created_at" type="TIMESTAMP(6)"/>
            <column name="customer_email" type="VARCHAR(255)"/>
            <column name="customer_name" type="VARCHAR(255)"/>
            <column name="customer_phone" type="VARCHAR(255)"/>
            <column name="reason" type="VARCHAR(255)"/>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP(6)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
